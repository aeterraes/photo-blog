<head>
  <meta charset="UTF-8" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/gallery-style.css">
</head>

<body>
<h1>{{title}}</h1>
<form action="/gallery/{{image.id}}" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="url">Image URL</label>
    <input type="url" id="url" name="url" value="{{image.url}}" required>
  </div>
  <button type="submit" class="submit-button">Update Image</button>
  <a href="/gallery" class="cancel-button">Cancel</a>
</form>
</body>
