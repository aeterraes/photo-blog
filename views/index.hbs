<main>
  <div class="welcome-section">
    <h2>Enjoy the beauty of various places</h2>
    <h3>And explore the stories behind the photos</h3>
    <button type="button" class="welcome-to-blog-button"><a href="/post/blog">Learn More</a></button>
  </div>

  <h2 class="post-header">Recent posts</h2>

  <div class="posts-section">
    {{#each posts}}
      <div class="post-item">
        <div class="post-text">
          <h3>{{title}}</h3>
          <p>{{description}}</p>
          <button type="button" class="to-post-button">
            <a href="/post/{{this.id}}">Read More</a>
          </button>
        </div>
        <img src="{{image}}" alt="{{title}}">
      </div>
    {{/each}}
  </div>

  <div class="goods-section">
    <h3>Capture the colourfulness of the moments</h3>
    <h4>Check out the new collection of postcards and posters inspired by the atmosphere of the mysterious autumn forest</h4>
    <button type="button" class="to-goods-button"><a href="/product/goods">Buy Now</a></button>
  </div>

  <div class="subscribe-section" id="contact">
    <h3>libre lente</h3>
    <h4>Stay up to date with new updates</h4>
    <p>Follow in Telegram and Vkontakte</p>
  </div>
  <div class="leaves-container" id="leaves-container"></div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
  <script>
    const numberOfLeaves = Math.floor(Math.random() * 31) + 10;
    const leaves = [];
    const container = document.getElementById('leaves-container');

    for (let i = 0; i < numberOfLeaves; i++) {
      const leaf = document.createElement('div');
      leaf.style.position = 'absolute';
      leaf.style.width = '150px';
      leaf.style.height = '150px';
      leaf.style.backgroundImage = "url('images/leaf.png')";
      leaf.style.backgroundSize = 'cover';
      leaf.style.opacity = '0';
      container.appendChild(leaf);
      leaves.push(leaf);
    }

    function animateLeaf(leaf) {
      const startX = Math.random() * window.innerWidth;
      const duration = Math.random() * 3000 + 3000;
      const rotation = Math.random() * 360;

      leaf.style.left = `${startX}px`;
      leaf.style.opacity = 1;

      anime({
        targets: leaf,
        translateY: [0, window.innerHeight + 100],
        translateX: [startX, startX + (Math.random() * 200 - 100)],
        rotate: [rotation, rotation + 360],
        opacity: [1, 0],
        duration: duration,
        easing: 'easeInOutSine',
        complete: () => {
          leaf.style.opacity = 0;
          animateLeaf(leaf);
        }
      });
    }

    leaves.forEach(leaf => animateLeaf(leaf));
  </script>
</main>
<footer class="footer-section">
  <p id="time-info"></p>
</footer>
<script src="js/time-info.js"></script>

